{
  "name": "refund-api",
  "version": "1.0.0",
  "description": "API Refund-2.0 Sistema de Reembolso",
  "main": "src/server.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch --env-file .env src/server.ts",
    "build": "tsup src --out-dir build",
    "start": "node build/server.js",
    "postinstall": "npx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "test:dev": "NODE_OPTIONS=--experimental-vm-modules npx jest --watchAll --runInBand",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmanuelmarcosdeoliveira/refund-api.git"
  },
  "keywords": [
    "Node.js",
    "API",
    "Refund",
    "Reembolso"
  ],
  "author": "Emmanuel Marcos de Oliveira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emmanuelmarcosdeoliveira/refund-api/issues"
  },
  "homepage": "https://github.com/emmanuelmarcosdeoliveira/refund-api#readme",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "prisma": "^6.2.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
